extends modules/layout
block title
  - title = 'Frequently Asked Questions';
block body
  body.home.white-scheme
    //wrapper starts
    #wrapper.with-cover.blue
      include modules/header
      //main starts
      #main
        //promo section starts
        section.promo-section.without-hero
        //promo section ends
        //features section start
        section.features-section.white.text-box.top-indent
          .holder
            .container
              h1.small-size.text-left Frequently Asked Questions
              ul.info-list
                li
                  h2.text-left Who is the book designed for?
                  p Our book is designed for children aged 2 to 8 but is also frequently bought as a special keepsake for new borns.
                li
                  h2.text-left What format is the book?
                  p The book is 26cm wide by 23cm tall. It is digitally printed on high quality, thick paper.
                li
                  h2.text-left How much do the books cost?
                  p Our books are £19.99 each, which includes the customised book and bright gift packaging. You will also receive a key code to access your online 'my world', containing bonus content and quizzes.
                li
                  h2.text-left Where do you deliver to?
                  p We deliver to all countries. We will let you know the expected delivery date for your location during the ordering process.
                li
                  h2.text-left How long does it take to arrive?
                  p Uk orders typically take 7-10 days and overseas orders 14-21 days.
                li
                  h2.text-left How is the book packaged?
                  p Each book is sent in a bright red book wrap and can be addressed directly to the child, so that the excitement starts as soon as they first receive it!
                li
                  h2.text-left What is my world?
                  p Each book contains a unique code that you can use to unlock your very own 'my world' of learning online. Here you can continue your story where you left off or take a quiz to see how much you learned and can remember!
                li
                  h2.text-left Have another question?
                  p If you have any other questions, please feel free to contact us and we will get right back to you.
              .btn-box.text-center.large-indent
                a.btn(href="#contacts" class="open-fancybox")
                  span Contact us
              form.common-form.text-center.small(action="#", novalidate, data-role="preview-book")
                label(for="name-1") Create my book:
                .frame
                  .row
                    input(type="text", id="name-1", data-role="name", placeholder="Enter child’s name")
                  .row
                    .col
                      ul.radio-list
                        li
                          input(type="radio", id="boy-1", name="gender-1", data-role="boy")
                          label.radio-label(for="boy-1") Boy
                        li
                          input(type="radio", id="girl-1", name="gender-1", data-role="girl")
                          label.radio-label(for="girl-1") Girl
                    .col
                      button.btn.align-right(type="submit", data-role="submit-name", data-letters-limit-max=12, data-letters-limit-min=3)
                        span Preview book
                    .row.hidden
                      span.hidden(data-error="type-1") Please enter the child's first name only (it should be a minimum of 3 characters and a maximum of 12 characters).
                      span.hidden(data-error="type-2") Please click on either Boy or Girl.
                      span.hidden(data-error="type-3") Oops, we can't make a book for this name yet as we don't have enough stories for the repeat letters in your child's name.<br>Please try again using just their first name or a shorter version of their name.
        //features section end
      //main ends
      include modules/footer
      include modules/lightbox
    //wrapper ends
    script(type='text/javascript').
      WebFontConfig = {
        google: { families: [ 'Cardo:400,700:latin', 'Lato:400,300,700:latin' ] }
      };
      (function() {
        var wf = document.createElement('script');
        wf.src = 'https://ajax.googleapis.com/ajax/libs/webfont/1/webfont.js';
        wf.type = 'text/javascript';
        wf.async = 'true';
        var s = document.getElementsByTagName('script')[0];
        s.parentNode.insertBefore(wf, s);
      })();
    //jQuery library
    // build:js js/jquery.min.js
    script(src="../bower_components/jquery/dist/jquery.min.js")
    // /build 
    // build:remove 
    block bowerScripts
      //modernizr plugin
      script(src="../bower_components/modernizr/modernizr.js")
      //detectizr plugin
      script(src="../bower_components/detectizr/dist/detectizr.js")
      //fastclick plugin
      script(src="../bower_components/fastclick/lib/fastclick.js")
      //placeholder plugin
      script(src="../bower_components/jquery-placeholder/jquery.placeholder.js")
      //retina plugin
      script(src="../bower_components/retina.js/dist/retina.min.js")
      //fancybox plugin
      script(src="../bower_components/fancybox/source/jquery.fancybox.js")
      //imagesLoaded plugin
      script(src="../bower_components/imagesLoaded/imagesLoaded.pkgd.min.js")
      //jquery lazyload plugin
      script(src="../bower_components/jquery_lazyload/jquery.lazyload.js")
    // /build 
    +replaceTpl('markup')
      block markupScripts
        script(src="js/plugins/modernizr.min.js")
        script(src="js/plugins/detectizr.min.js")
        script(src="js/plugins/fastclick.min.js")
        script(src="js/plugins/jquery.placeholder.min.js")
        script(src="js/plugins/retina.min.js")
        script(src="js/plugins/imagesLoaded.pkgd.min.js")
        script(src="js/plugins/jquery.lazyload.js")
    // build:remove:build 
    //include plugins
    block pluginsScripts 
      script(src="js/jquery.form-validator.js")
      script(src="js/jquery.show-error.js")
      script(src="js/jquery.ajax-setup.js")
      script(src="js/jquery.buy.js")
      script(src="js/experiments.js")
    //init plugins
    block initScripts
      script(src="js/jquery.utilities.js")
      script(src="js/jquery.common.js")
    // /build 
    +replaceTpl('build')
      script(src="js/wondrous-ink.min.js")
    = "\n\r  "