extends modules/layout
block title
  - title = 'Press enquiries';
block body
  body.home.white-scheme
    //wrapper starts
    #wrapper.with-cover.blue
      include modules/header
      //main starts
      #main
        //promo section starts
        section.promo-section.without-hero
        //promo section ends
        //features section start
        section.features-section.white.text-box.top-indent
          h1.accessibility Press page
          .holder
            .container
              h2.text-left Press enquiries
              p The Wondrous World Of... books are brought to you by Wondrous Ink, a husband and wife team with a real passion for bringing back the magic of books and engaging children aged 2–6 through learning and reading.
              h3.text-left CONTACT
              p.small-text For further press information, please contact Mike at <a href="mailto:info@wondrousink.com">info@wondrousink.com</a>
              h3.text-left IMAGES
              p.small-text The following high res image assets are currently available:
              .thumbnails
                h4.text-left Book page image (click to enlarge)
                ul.list
                  li
                    a(href="images/content/img-book-items-1.jpg", class="open-fancybox" rel="gallery1" )
                      figure
                        img.lazy(data-original="images/content/img-book-items-1.jpg" src="images/none.gif" width="177" height="155" alt="img-description")
                        figcaption Letter E (girl - p1)
                  li
                    a(href="images/content/img-book-items-2.jpg", class="open-fancybox" rel="gallery1" )
                      figure
                        img.lazy(data-original="images/content/img-book-items-2.jpg" src="images/none.gif" width="177" height="155" alt="img-description")
                        figcaption Letter E (girl - p2)
                  li
                    a(href="images/content/img-book-items-3.jpg", class="open-fancybox" rel="gallery1" )
                      figure
                        img.lazy(data-original="images/content/img-book-items-3.jpg" src="images/none.gif" width="177" height="155" alt="img-description")
                        figcaption Letter L (girl)
                  li
                    a(href="images/content/img-book-items-4.jpg", class="open-fancybox" rel="gallery1" )
                      figure
                        img.lazy(data-original="images/content/img-book-items-4.jpg" src="images/none.gif" width="177" height="155" alt="img-description")
                        figcaption Letter S (boy)
                  li
                    a(href="images/content/img-book-items-5.jpg", class="open-fancybox" rel="gallery1" )
                      figure
                        img.lazy(data-original="images/content/img-book-items-5.jpg" src="images/none.gif" width="177" height="155" alt="img-description")
                        figcaption Letter U (girl)
                  li
                    a(href="images/content/img-book-items-6.jpg", class="open-fancybox" rel="gallery1" )
                      figure
                        img.lazy(data-original="images/content/img-book-items-6.jpg" src="images/none.gif" width="177" height="155" alt="img-description")
                        figcaption Letter W (girl)
                  li
                    a(href="images/content/img-book-items-7.jpg", class="open-fancybox" rel="gallery1" )
                      figure
                        img.lazy(data-original="images/content/img-book-items-7.jpg" src="images/none.gif" width="177" height="155" alt="img-description")
                        figcaption Letter Y (boy)
              form.common-form.text-center.small(action="#", novalidate, data-role="preview-book")
                label(for="name-1") Create my book:
                .frame
                  .row
                    input(type="text", id="name-1", data-role="name", placeholder="Enter child’s name")
                  .row
                    .col
                      ul.radio-list
                        li
                          input(type="radio", id="boy-1", name="gender-1", data-role="boy")
                          label.radio-label(for="boy-1") Boy
                        li
                          input(type="radio", id="girl-1", name="gender-1", data-role="girl")
                          label.radio-label(for="girl-1") Girl
                    .col
                      button.btn.align-right(type="submit", data-role="submit-name", data-letters-limit-max=12, data-letters-limit-min=3)
                        span Preview book
                    .row.hidden
                      span.hidden(data-error="type-1") Please enter the child's first name only (it should be a minimum of 3 characters and a maximum of 12 characters).
                      span.hidden(data-error="type-2") Please click on either Boy or Girl.
                      span.hidden(data-error="type-3") Oops, we can't make a book for this name yet as we don't have enough stories for the repeat letters in your child's name.<br>Please try again using just their first name or a shorter version of their name.
        //features section end
      //main ends
      include modules/footer
    //wrapper ends
    script(type='text/javascript').
      WebFontConfig = {
        google: { families: [ 'Cardo:400,700:latin', 'Lato:400,300,700:latin' ] }
      };
      (function() {
        var wf = document.createElement('script');
        wf.src = 'https://ajax.googleapis.com/ajax/libs/webfont/1/webfont.js';
        wf.type = 'text/javascript';
        wf.async = 'true';
        var s = document.getElementsByTagName('script')[0];
        s.parentNode.insertBefore(wf, s);
      })();
    //jQuery library
    // build:js js/jquery.min.js
    script(src="../bower_components/jquery/dist/jquery.min.js")
    // /build 
    // build:remove 
    block bowerScripts
      //modernizr plugin
      script(src="../bower_components/modernizr/modernizr.js")
      //detectizr plugin
      script(src="../bower_components/detectizr/dist/detectizr.js")
      //fastclick plugin
      script(src="../bower_components/fastclick/lib/fastclick.js")
      //placeholder plugin
      script(src="../bower_components/jquery-placeholder/jquery.placeholder.js")
      //retina plugin
      script(src="../bower_components/retina.js/dist/retina.min.js")
      //fancybox plugin
      script(src="../bower_components/fancybox/source/jquery.fancybox.js")
      //imagesLoaded plugin
      script(src="../bower_components/imagesLoaded/imagesLoaded.pkgd.min.js")
      //jquery lazyload plugin
      script(src="../bower_components/jquery_lazyload/jquery.lazyload.js")
    // /build 
    +replaceTpl('markup')
      block markupScripts
        script(src="js/plugins/modernizr.min.js")
        script(src="js/plugins/detectizr.min.js")
        script(src="js/plugins/fastclick.min.js")
        script(src="js/plugins/jquery.placeholder.min.js")
        script(src="js/plugins/retina.min.js")
        script(src="js/plugins/jquery.fancybox.pack.min.js")
        script(src="js/plugins/imagesLoaded.pkgd.min.js")
        script(src="js/plugins/jquery.lazyload.js")
    // build:remove:build 
    //include plugins
    block pluginsScripts 
      script(src="js/jquery.form-validator.js")
      script(src="js/jquery.show-error.js")
      script(src="js/jquery.ajax-setup.js")
      script(src="js/jquery.buy.js")
      script(src="js/experiments.js")
    //init plugins
    block initScripts
      script(src="js/jquery.utilities.js")
      script(src="js/jquery.common.js")
    // /build 
    +replaceTpl('build')
      script(src="js/wondrous-ink.min.js")
    = "\n\r  "