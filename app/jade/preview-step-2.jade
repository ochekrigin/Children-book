extends modules/layout
block title
  - title = 'Preview example';
block body
  - preview = true;
  body.preview
    //wrapper starts
    #wrapper
      include modules/header
      //main starts
      #main
        //preview message section starts
        section.preview-message-section
          form(action="#", novalidate, data-form)
            h1.accessibility Preview message
            .container
              .holder
                header.heading
                  .col-1
                    figure.product-item
                      .img-holder(data-gender="girl")
                        img.lazy.girl-image(data-original="images/content/img-preview.jpg", src="images/none.gif", alt="img-description", width="160", height="141")
                        img.lazy.boy-image(data-original="images/content/img-preview-2.jpg", src="images/none.gif", alt="img-description", width="160", height="141")
                      figcaption
                        .info-options
                          h2 The wondrous world of <span class="name" data-user-name>Sally Smith</span>
                          h3(data-title-gender).hidden Girl
                        .box
                          ul.option-list
                            li
                              a(href="#edit" data-edit-popup).open-fancybox Edit book
                            li
                              a(href="#") Remove
                          strong.price £19.99
                  .col-2
                    label(for="currency-2") Change currency:
                    .select-holder
                      select(name="currency", id="currency-2", data-role="select", data-placeholder="British pounds")
                        option(value="GBP") GBP
                        option(value="USD") USD
                        option(value="EUR") EUR
                        option(value="CAD") CAD
                        option(value="AUD") AUD
                        option(value="NZD") NZD
                        option(value="HKD") HKD
                        option(value="SGD") SGD
                        option(value="KRW") KRW
                .content
                  h2.entry Add a personal message on the inside cover, to make their book even more special!
                  .textarea-box(data-char-count-container, data-char-limit="350", data-line-limit="15")
                    textarea(data-role="expanding-textarea", spellcheck="false", data-char-count-field) Hello Sally,&#10;Welcome to your very own wondrous ink adventure. inside these pages you'll discover an enchanting world of magical fun that's all about you. while you are reading your book, be sure to look out for your secret key to help you continue your adventure online.
                    em.char-count
                      <span class="count" data-char-count-number>300</span> of 350 characters available
                      <span class="line-count" data-line-count-number>14</span> of 15 lines available
                    .pre
                  .option-box
                    .col
                      p Not sure how to put it into words?, try one of our ready-made templates:
                    .col
                      .select-holder
                        select(name="template", data-role="select", data-placeholder="Choose a template")
                          option(value="Template-1") Template-1
                          option(value="Template-2") Template-2
                          option(value="Template-3") Template-3
                          option(value="Template-4") Template-4
                  .gift-options
                    .frame
                      .col-1
                        h2 Add our wondrous gift wrap envelope to your order
                        ul.radio-list-small
                          li
                            input(type="radio" name="data-name-1" id="option-1" checked)
                            label(for="option-1") Yes, please I would love the gift wrap
                          li
                            input(type="radio" name="data-name-1" id="option-2")
                            label(for="option-2") No, thank you
                      .col-2
                        .img-holder
                          img.lazy(data-original="images/content/img-gift-1.png" src="images/none.gif" width="315" height="234" alt="img-description")
                          .price
                            span ONLY
                            em.number £1.99
                          .info-box Lift the<br> flap to<br> see child’s name
                  ul.action-list
                    li
                      a.btn.full-width(href="#")
                        span Add book to basket <i class="icon-basket-big"></i>
                      em.note Set a reminder, for an upcoming date such as a child, grandchild or nephew's birthday.
                span.ill.hidden.l-visible
                span.ill-shadow
        //preview message section ends
      //main ends
      include modules/footer
      span.ill-body
        img.lazy(data-original="images/backgrounds/bg-body.jpg", src="images/none.gif", alt="img-description", width="1440", height="863")
    include modules/lightbox
    //wrapper ends
    script(type='text/javascript').
      WebFontConfig = {
        google: { families: [ 'Cardo:400,700:latin', 'Lato:400,300,700:latin' ] }
      };
      (function() {
        var wf = document.createElement('script');
        wf.src = 'https://ajax.googleapis.com/ajax/libs/webfont/1/webfont.js';
        wf.type = 'text/javascript';
        wf.async = 'true';
        var s = document.getElementsByTagName('script')[0];
        s.parentNode.insertBefore(wf, s);
      })();
    //jQuery library
    // build:js js/jquery.min.js
    script(src="../bower_components/jquery/dist/jquery.min.js")
    // /build 
    // build:remove 
    block bowerScripts
      //modernizr plugin
      script(src="../bower_components/modernizr/modernizr.js")
      //detectizr plugin
      script(src="../bower_components/detectizr/dist/detectizr.js")
      //autogrow plugin
      script(src="../bower_components/autosize/dist/autosize.min.js")
      //fastclick plugin
      script(src="../bower_components/fastclick/lib/fastclick.js")
      //placeholder plugin
      script(src="../bower_components/jquery-placeholder/jquery.placeholder.js")
      //retina plugin
      script(src="../bower_components/retina.js/dist/retina.min.js")
      //fancybox plugin
      script(src="../bower_components/fancybox/source/jquery.fancybox.js")
      //imagesLoaded plugin
      script(src="../bower_components/imagesLoaded/imagesLoaded.pkgd.min.js")
      //jquery lazyload plugin
      script(src="../bower_components/jquery_lazyload/jquery.lazyload.js")
    // /build 
    +replaceTpl('markup')
      block markupScripts
        script(src="js/plugins/modernizr.min.js")
        script(src="js/plugins/detectizr.min.js")
        script(src="js/plugins/jquery.autosize.min.js")
        script(src="js/plugins/fastclick.min.js")
        script(src="js/plugins/jquery.fancybox.pack.min.js")
        script(src="js/plugins/retina.min.js")
        script(src="js/plugins/imagesLoaded.pkgd.min.js")
        script(src="js/plugins/jquery.lazyload.js")
    // build:remove:build 
    //include plugins
    block pluginsScripts
      script(src="js/jquery.form-validator.js")
    //init plugins
    block initScripts
      script(src="js/jquery.utilities.js")
      script(src="js/jquery.common.js")
      script(src="js/jquery.data-edit.js")
      script(src="js/jquery.ajax-setup.js")
      script(src="js/jquery.buy.js")
      script(src="js/experiments.js")
    // /build 
    +replaceTpl('build')
      script(src="js/wondrous-ink.min.js")
    = "\n\r  "